{
  "name": "emoji-finder",
  "description": "A React Web App Emoji Finder using Hooks, Memoization and React Profiler",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material/react-material-icon": "^0.15.0",
    "@material/react-text-field": "^0.15.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "5.0.1",
    "throttle-debounce": "^2.1.0"
  },
  "keywords": [
    "react",
    "hooks",
    "memo",
    "memoization",
    "profiler",
    "React.Profiler",
    "React.memo",
    "useEffect",
    "useMemo",
    "useRef"
  ],
  "scripts": {
    "cypress:open": "cypress open",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "cypress": "^3.4.1"
  }
}
